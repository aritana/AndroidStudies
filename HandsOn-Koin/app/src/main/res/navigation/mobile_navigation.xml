<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.bootcamp.handson.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_load_json"
            app:destination="@id/nav_load_json" />
    </fragment>

    <fragment
        android:id="@+id/nav_load_image"
        android:name="com.bootcamp.handson.ui.loadImage.LoadImageFragment"
        android:label="@string/menu_image"
        tools:layout="@layout/fragment_load_image" />

    <fragment
        android:id="@+id/nav_load_list"
        android:name="com.bootcamp.handson.ui.loadList.LoadListFragment"
        android:label="@string/menu_list"
        tools:layout="@layout/fragment_load_list" />

    <fragment
        android:id="@+id/nav_load_json"
        android:name="com.bootcamp.handson.ui.loadJson.LoadJsonFragment"
        android:label="@string/menu_json"
        tools:layout="@layout/fragment_load_json" />
</navigation>